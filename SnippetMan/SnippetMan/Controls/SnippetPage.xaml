<UserControl x:Class="SnippetMan.Controls.SnippetPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:AvalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:Controls="clr-namespace:SnippetMan.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SnippetMan.Controls.Utils"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <local:MaxHeightConverter x:Key="MaxHeightConverter" />
            <sys:Double x:Key="importHeightRatio">0.3</sys:Double>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="gridSnippet">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Details  -->
        <Controls:ButtonedExGroupBox Grid.Row="0"
                                     Height="Auto"
                                     VerticalAlignment="Stretch"
                                     GroupBox.Foreground="White"
                                     GroupBox.Header="Details">
            <Controls:ButtonedExGroupBox.InnerContent>
                <StackPanel>
                    <TextBox HorizontalAlignment="Stretch"
                             MaxLines="1"
                             Text="Some default snippet title"
                             TextWrapping="NoWrap" />
                    <TextBox Margin="0,8"
                             HorizontalAlignment="Stretch"
                             AcceptsReturn="True"
                             Text="Beschreibung"
                             TextWrapping="Wrap" />
                    <WrapPanel Uid="wrapP_combx">
                        <Button Uid="btn_del_cmbx"
                                Width="16"
                                Height="16"
                                Margin="0,10,10,5"
                                Click="Button_Del_Combx_Clicked"
                                Visibility="Collapsed">
                            <Image Width="16px"
                                   Source="{StaticResource remove_24pxDrawingImage}" />
                        </Button>
                        <Button Uid="btn_add_cmbx"
                                Width="16"
                                Height="16"
                                Margin="0,5,0,0"
                                Click="Button_Add_Combx_Clicked">
                            <Image Width="16px"
                                   Source="{StaticResource add_24pxDrawingImage}" />
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Controls:ButtonedExGroupBox.InnerContent>
            <Controls:ButtonedExGroupBox.HeaderRightHand>
                <ToggleButton Uid="btn_edit_details"
                              Width="Auto"
                              Margin="0,-14,32,0"
                              Padding="2"
                              VerticalAlignment="Top">
                    <Image Width="16px"
                           Source="{StaticResource edit_24pxDrawingImage}" />
                </ToggleButton>
            </Controls:ButtonedExGroupBox.HeaderRightHand>
        </Controls:ButtonedExGroupBox>

        <!--  Imports  -->
        <Controls:ButtonedExGroupBox Grid.Row="1"
                                     Height="Auto"
                                     MaxHeight="{Binding ElementName=gridSnippet, Path=ActualHeight, Converter={StaticResource MaxHeightConverter}, ConverterParameter={StaticResource importHeightRatio}}"
                                     VerticalAlignment="Stretch"
                                     GroupBox.Foreground="White"
                                     GroupBox.Header="Imports">
            <Controls:ButtonedExGroupBox.InnerContent>
                <AvalonEdit:TextEditor Uid="ae_imports"
                                       MinHeight="128px"
                                       IsReadOnly="True" />
            </Controls:ButtonedExGroupBox.InnerContent>
            <Controls:ButtonedExGroupBox.HeaderRightHand>
                <Grid Height="Auto"
                      Margin="0,-14,32,0"
                      VerticalAlignment="Top">
                    <ToggleButton Uid="btn_edit_import"
                                  Width="Auto"
                                  Padding="2"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Top"
                                  Checked="ToggleButton_Edit_CheckChanged"
                                  Unchecked="ToggleButton_Edit_CheckChanged">
                        <Image Width="16px"
                               Source="{StaticResource edit_24pxDrawingImage}" />
                    </ToggleButton>
                    <Button Uid="btn_copy_import"
                            Width="Auto"
                            Margin="0,0,28,0"
                            Padding="2"
                            VerticalAlignment="Top"
                            Click="Button_Copy_Clicked">
                        <Image Width="16px"
                               Source="{StaticResource file_copy_24pxDrawingImage}" />
                    </Button>
                </Grid>
            </Controls:ButtonedExGroupBox.HeaderRightHand>
        </Controls:ButtonedExGroupBox>

        <!--  Code  -->
        <Controls:ButtonedExGroupBox Grid.Row="2"
                                     Height="Auto"
                                     VerticalAlignment="Stretch"
                                     GroupBox.Foreground="White"
                                     GroupBox.Header="Code">
            <Controls:ButtonedExGroupBox.InnerContent>
                <AvalonEdit:TextEditor Uid="ae_code"
                                       IsReadOnly="True" />
            </Controls:ButtonedExGroupBox.InnerContent>
            <Controls:ButtonedExGroupBox.HeaderRightHand>
                <Grid Height="Auto"
                      Margin="0,-14,32,0"
                      VerticalAlignment="Top">
                    <ToggleButton Uid="btn_edit_code"
                                  Width="Auto"
                                  Padding="2"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Top"
                                  Checked="ToggleButton_Edit_CheckChanged"
                                  Unchecked="ToggleButton_Edit_CheckChanged">
                        <Image Width="16px"
                               Source="{StaticResource edit_24pxDrawingImage}" />
                    </ToggleButton>
                    <Button Uid="btn_copy_code"
                            Width="Auto"
                            Margin="0,0,28,0"
                            Padding="2"
                            VerticalAlignment="Top"
                            Click="Button_Copy_Clicked">
                        <Image Width="16px"
                               Source="{StaticResource file_copy_24pxDrawingImage}" />
                    </Button>
                </Grid>
            </Controls:ButtonedExGroupBox.HeaderRightHand>
        </Controls:ButtonedExGroupBox>
    </Grid>
</UserControl>