<UserControl
    x:Class="SnippetMan.Controls.SnippetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:AvalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:Controls="clr-namespace:SnippetMan.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel
        Height="Auto"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        LastChildFill="True">

        <!--  Details  -->
        <Controls:ButtonedExGroupBox
            Height="Auto"
            MinHeight="96px"
            VerticalAlignment="Stretch"
            DockPanel.Dock="Top"
            GroupBox.Foreground="White"
            GroupBox.Header="Details">
            <Controls:ButtonedExGroupBox.InnerContent>
                <StackPanel>
                    <TextBlock>
                        Titel
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        Beschreibung
                    </TextBlock>
                    <WrapPanel Uid="wrapP_combx">
                        <ComboBox Uid="combx_ProgLang">
                            <ComboBoxItem Content="C" />
                            <ComboBoxItem Content="C++" />
                            <ComboBoxItem Content="C#" />
                            <ComboBoxItem Content="Java" />
                            <ComboBoxItem Content="Python" />
                            <ComboBoxItem Content="Javascript" />
                        </ComboBox>
                        <ComboBox Uid="combx_Tag0">
                            <ComboBoxItem Content="Tag1" />
                            <ComboBoxItem Content="Tag2" />
                        </ComboBox>
                        <Button 
                            Uid="btn_add_cmbx"
                            Width="20"
                            Margin="0, 5, 0, 0"
                            Padding="2" Click="Button_Add_Combx_Clicked"/>
                    </WrapPanel>
                </StackPanel>
            </Controls:ButtonedExGroupBox.InnerContent>
            <Controls:ButtonedExGroupBox.HeaderRightHand>
                <ToggleButton
                    Uid="btn_edit_details"
                    Width="Auto"
                    Margin="0,-14,32,0"
                    Padding="2"
                    VerticalAlignment="Top">
                    <Image Width="16px" Source="{StaticResource edit_24pxDrawingImage}" />
                </ToggleButton>
            </Controls:ButtonedExGroupBox.HeaderRightHand>
        </Controls:ButtonedExGroupBox>

        <!--  Imports  -->
        <Controls:ButtonedExGroupBox
            Height="Auto"
            MinHeight="164px"
            VerticalAlignment="Stretch"
            DockPanel.Dock="Top"
            GroupBox.Foreground="White"
            GroupBox.Header="Imports">
            <Controls:ButtonedExGroupBox.InnerContent>
                <AvalonEdit:TextEditor
                    Uid="ae_imports"
                    Background="#555"
                    Foreground="White"
                    IsReadOnly="True" />
            </Controls:ButtonedExGroupBox.InnerContent>
            <Controls:ButtonedExGroupBox.HeaderRightHand>
                <Grid
                    Height="Auto"
                    Margin="0,-14,32,0"
                    VerticalAlignment="Top">
                    <ToggleButton
                        Uid="btn_edit_import"
                        Width="Auto"
                        Padding="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Checked="ToggleButton_Edit_CheckChanged"
                        Unchecked="ToggleButton_Edit_CheckChanged">
                        <Image Width="16px" Source="{StaticResource edit_24pxDrawingImage}" />
                    </ToggleButton>
                    <Button
                        Uid="btn_copy_import"
                        Width="Auto"
                        Margin="0,0,28,0"
                        Padding="2"
                        VerticalAlignment="Top"
                        Click="Button_Copy_Clicked">
                        <Image Width="16px" Source="{StaticResource file_copy_24pxDrawingImage}" />
                    </Button>
                </Grid>
            </Controls:ButtonedExGroupBox.HeaderRightHand>
        </Controls:ButtonedExGroupBox>

        <!--  Code  -->
        <Controls:ButtonedExGroupBox
            Height="Auto"
            VerticalAlignment="Stretch"
            DockPanel.Dock="Top"
            GroupBox.Foreground="White"
            GroupBox.Header="Code">
            <Controls:ButtonedExGroupBox.InnerContent>
                <AvalonEdit:TextEditor
                    Uid="ae_code"
                    Background="#555"
                    Foreground="White"
                    IsReadOnly="True" />
            </Controls:ButtonedExGroupBox.InnerContent>
            <Controls:ButtonedExGroupBox.HeaderRightHand>
                <Grid
                    Height="Auto"
                    Margin="0,-14,32,0"
                    VerticalAlignment="Top">
                    <ToggleButton
                        Uid="btn_edit_code"
                        Width="Auto"
                        Padding="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Checked="ToggleButton_Edit_CheckChanged"
                        Unchecked="ToggleButton_Edit_CheckChanged">
                        <Image Width="16px" Source="{StaticResource edit_24pxDrawingImage}" />
                    </ToggleButton>
                    <Button
                        Uid="btn_copy_code"
                        Width="Auto"
                        Margin="0,0,28,0"
                        Padding="2"
                        VerticalAlignment="Top"
                        Click="Button_Copy_Clicked">
                        <Image Width="16px" Source="{StaticResource file_copy_24pxDrawingImage}" />
                    </Button>
                </Grid>
            </Controls:ButtonedExGroupBox.HeaderRightHand>
        </Controls:ButtonedExGroupBox>

    </DockPanel>
</UserControl>