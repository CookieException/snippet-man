<UserControl
    x:Class="SnippetMan.Controls.SnippetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:AvalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:Controls="clr-namespace:SnippetMan.Controls"
    xmlns:WatermarkTextBox="clr-namespace:WatermarkControlsLib.Controls;assembly=WatermarkControlsLib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SnippetMan.Controls.Utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <local:MaxHeightConverter x:Key="MaxHeightConverter" />
            <sys:Double x:Key="importHeightRatio">0.3</sys:Double>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="gridSnippet">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Details  -->
        <Controls:ButtonedExGroupBox
            Grid.Row="0"
            Height="Auto"
            VerticalAlignment="Stretch"
            GroupBox.Foreground="White"
            GroupBox.Header="Details">
            <Controls:ButtonedExGroupBox.InnerContent>
                <StackPanel>
                    <WatermarkTextBox:WatermarkTextBox
                        Uid="tb_title"
                        HorizontalAlignment="Stretch"
                        IsReadOnly="True"
                        KeyDown="TB_Details_KeyDown"
                        MaxLines="1"
                        TextChanged="TextBox_TextChanged"
                        TextWrapping="NoWrap"
                        Watermark="Title" />
                    <WatermarkTextBox:WatermarkTextBox
                        Uid="tb_description"
                        Margin="0,8"
                        HorizontalAlignment="Stretch"
                        AcceptsReturn="True"
                        IsReadOnly="True"
                        KeyDown="TB_Details_KeyDown"
                        TextWrapping="Wrap"
                        Watermark="Description" />
                    <WrapPanel Uid="wrapP_combx">
                        <Image
                            Width="16"
                            Height="16"
                            Margin="0,0,5,3"
                            Source="{StaticResource code_24pxDrawingImage}" />
                        <ComboBox
                            Uid="combx_Tag0"
                            IsEditable="True"
                            IsReadOnly="False" />

                        <!--  TODO: Source soll gegen Trenner Icon getauscht werden  -->
                        <Separator
                            Width="25"
                            Height="10"
                            Margin="-10,0,0,3"
                            RenderTransformOrigin="0.5,0.5">
                            <Separator.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                    <SkewTransform />
                                    <RotateTransform Angle="90" />
                                    <TranslateTransform />
                                </TransformGroup>
                            </Separator.RenderTransform>
                        </Separator>
                        <!--  TODO: Source soll gegen Tag Icon ausgetauscht werden  -->
                        <!--  Margin so gewählt, dass Unterschied zwischen ProgLang und Tags eindeutig wird  -->
                        <Image
                            Width="16"
                            Height="16"
                            Margin="10,0,5,3"
                            RenderTransformOrigin="0.5,0.5"
                            Source="{StaticResource label_24pxDrawingImage}">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                    <SkewTransform />
                                    <RotateTransform Angle="90" />
                                    <TranslateTransform />
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                        <Button
                            Uid="btn_add_cmbx"
                            Width="16"
                            Height="16"
                            Margin="0,0,10,3"
                            Click="Button_Add_Combx_Clicked">
                            <Image Width="16px" Source="{StaticResource add_24pxDrawingImage}" />
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Controls:ButtonedExGroupBox.InnerContent>
            <Controls:ButtonedExGroupBox.HeaderRightHand>
                <ToggleButton
                    Uid="btn_edit_details"
                    Width="Auto"
                    Margin="0,-14,32,0"
                    Padding="2"
                    VerticalAlignment="Top"
                    Checked="ToggleButton_Edit_CheckChanged"
                    Unchecked="ToggleButton_Edit_CheckChanged">
                    <Image Width="16px" Source="{StaticResource edit_24pxDrawingImage}" />
                </ToggleButton>
            </Controls:ButtonedExGroupBox.HeaderRightHand>
        </Controls:ButtonedExGroupBox>

        <!--  Imports  -->
        <Controls:ButtonedExGroupBox
            Grid.Row="1"
            Height="Auto"
            MaxHeight="{Binding ElementName=gridSnippet, Path=ActualHeight, Converter={StaticResource MaxHeightConverter}, ConverterParameter={StaticResource importHeightRatio}}"
            VerticalAlignment="Stretch"
            GroupBox.Foreground="White"
            GroupBox.Header="Imports">
            <Controls:ButtonedExGroupBox.InnerContent>
                <AvalonEdit:TextEditor
                    Uid="ae_imports"
                    MinHeight="128px"
                    IsReadOnly="True"
                    KeyDown="ImportEditor_KeyDown" />
            </Controls:ButtonedExGroupBox.InnerContent>
            <Controls:ButtonedExGroupBox.HeaderRightHand>
                <Grid
                    Height="Auto"
                    Margin="0,-14,32,0"
                    VerticalAlignment="Top">
                    <ToggleButton
                        Uid="btn_edit_import"
                        Width="Auto"
                        Padding="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Checked="ToggleButton_Edit_CheckChanged"
                        Unchecked="ToggleButton_Edit_CheckChanged">
                        <Image Width="16px" Source="{StaticResource edit_24pxDrawingImage}" />
                    </ToggleButton>
                    <Button
                        Uid="btn_copy_import"
                        Width="Auto"
                        Margin="0,0,28,0"
                        Padding="2"
                        VerticalAlignment="Top"
                        Click="Button_Copy_Clicked">
                        <Image
                            Uid="copy_t"
                            Width="16px"
                            Source="{StaticResource file_copy_24pxDrawingImage}" />
                    </Button>
                    <Popup
                        Uid="popup_import"
                        Width="120"
                        Height="20"
                        HorizontalAlignment="Left"
                        AllowsTransparency="True"
                        IsOpen="False"
                        Placement="Mouse"
                        StaysOpen="False">
                        <Border
                            Background="Wheat"
                            BorderBrush="Wheat"
                            BorderThickness="1"
                            CornerRadius="5">
                            <TextBlock
                                Background="Transparent"
                                Foreground="Black"
                                Text="Copied to Clipboard!"
                                TextAlignment="Center" />
                        </Border>
                    </Popup>
                </Grid>
            </Controls:ButtonedExGroupBox.HeaderRightHand>
        </Controls:ButtonedExGroupBox>

        <!--  Code  -->
        <Controls:ButtonedExGroupBox
            Grid.Row="2"
            Height="Auto"
            VerticalAlignment="Stretch"
            GroupBox.Foreground="White"
            GroupBox.Header="Code">
            <Controls:ButtonedExGroupBox.InnerContent>
                <AvalonEdit:TextEditor
                    Uid="ae_code"
                    IsReadOnly="True"
                    KeyDown="CodeEditor_KeyDown" />
            </Controls:ButtonedExGroupBox.InnerContent>
            <Controls:ButtonedExGroupBox.HeaderRightHand>
                <Grid
                    Height="Auto"
                    Margin="0,-14,32,0"
                    VerticalAlignment="Top">
                    <ToggleButton
                        Uid="btn_edit_code"
                        Width="Auto"
                        Padding="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Checked="ToggleButton_Edit_CheckChanged"
                        Unchecked="ToggleButton_Edit_CheckChanged">
                        <Image Width="16px" Source="{StaticResource edit_24pxDrawingImage}" />
                    </ToggleButton>
                    <Button
                        Uid="btn_copy_code"
                        Width="Auto"
                        Margin="0,0,28,0"
                        Padding="2"
                        VerticalAlignment="Top"
                        Click="Button_Copy_Clicked">
                        <Image Width="16px" Source="{StaticResource file_copy_24pxDrawingImage}" />
                    </Button>
                    <Popup
                        Uid="popup_code"
                        Width="120"
                        Height="20"
                        HorizontalAlignment="Left"
                        AllowsTransparency="True"
                        IsOpen="False"
                        Placement="Mouse"
                        StaysOpen="False">
                        <Border
                            Background="Wheat"
                            BorderBrush="Wheat"
                            BorderThickness="1"
                            CornerRadius="5">
                            <TextBlock
                                Background="Transparent"
                                Foreground="Black"
                                Text="Copied to Clipboard!"
                                TextAlignment="Center" />
                        </Border>
                    </Popup>
                </Grid>
            </Controls:ButtonedExGroupBox.HeaderRightHand>
        </Controls:ButtonedExGroupBox>
    </Grid>
</UserControl>