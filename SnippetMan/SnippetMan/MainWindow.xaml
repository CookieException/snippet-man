<Window x:Class="SnippetMan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:SnippetMan.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Snippet Man"
        Width="800"
        Height="450"
        AllowsTransparency="True"
        Background="#2C2C2C"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Grid>
        <TabControl x:Name="tbc_pages"
                    Background="Transparent">
            <TabControl.Resources>
                <Style BasedOn="{StaticResource {x:Type TabItem}}"
                       TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid>
                                    <Border Name="Border"
                                            Width="Auto"
                                            Height="30"
                                            MaxWidth="222"
                                            Margin="2,0,0,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Bottom"
                                            Background="#444"
                                            CornerRadius="8, 8, 0, 0">
                                        <ContentPresenter x:Name="ContentSite"
                                                          Width="Auto"
                                                          Margin="8,2,8,2"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"
                                                          ContentSource="Header"
                                                          RecognizesAccessKey="True">

                                            <ContentPresenter.Resources>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Foreground" Value="White" />
                                                    <Setter Property="FontSize" Value="14px" />
                                                </Style>
                                            </ContentPresenter.Resources>
                                        </ContentPresenter>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="Gray" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#727272" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="SnippetName">
                <!--  Content is to be filled with more. Snippet Page is just shown for debugging  -->
                <Controls:SnippetPage />
            </TabItem>
            <TabItem Header="SnippetNameDerWirklichGanzLangIst">
                <!--  Content is to be filled with more. Snippet Page is just shown for debugging  -->
                <Controls:SnippetPage />
            </TabItem>
            <TabItem IsEnabled="False">
                <TabItem.Header>
                    <Image Width="24px"
                           Source="{StaticResource add_24pxDrawingImage}" />
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
